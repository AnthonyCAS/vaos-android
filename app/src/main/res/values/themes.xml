<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vaos" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_vaos_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Vaos.NoActionBar</item>
    </style>

    <style name="Theme.Vaos.NoActionBar" parent="@android:style/Theme.Material.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Vaos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vaos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
