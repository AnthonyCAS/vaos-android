<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Vaos.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@android:color/white</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Vaos.NoActionBar</item>
    </style>

    <style name="Theme.Vaos.NoActionBar" parent="@android:style/Theme.Material.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
